<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dllo.vmovie">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".VMovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/moon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SearchActivity" />
        <activity android:name=".home.ChannelDetailActivity"/>
        <activity android:name=".home.ChannelContentActivity"/>
        <activity android:name=".backstage.activity.AllDetailActivity"/>
        <activity android:name=".backstage.activity.CommentDetailActivity"/>
    </application>

</manifest>