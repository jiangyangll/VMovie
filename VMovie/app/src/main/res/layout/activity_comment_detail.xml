<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_all_detail"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp">

        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:textSize="@dimen/fifteen_sp"/>

        <ImageView
            android:id="@+id/image_comment_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/twenty_dp"
            android:background="@mipmap/comment_down_arrow"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_none_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="暂无评论"/>

        <ExpandableListView
            android:id="@+id/expand_listView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_hundred_twenty_dp"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_comment_bottom"
            android:layout_width="@dimen/three_hundred_dp"
            android:layout_height="@dimen/fifty_dp"
            android:hint="我来说两句..."/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_dp"
            android:layout_toRightOf="@+id/et_comment_bottom"
            android:text="发送"
            android:textColor="@android:color/white"/>

    </RelativeLayout>


</LinearLayout>