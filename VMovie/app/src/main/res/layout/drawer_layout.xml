<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_drawer_head_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/default_avatar"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/fifty_dp"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/iv_drawer_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/side_set"
            android:layout_toLeftOf="@+id/iv_drawer_head_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/thirty_dp"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/iv_drawer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/side_message"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_drawer_head_icon"
            android:layout_marginLeft="@dimen/thirty_dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_to_login"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/iv_drawer_head_icon"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:textSize="@dimen/seventeen_sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_drawer_my_subscribe"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:background="@mipmap/side_subscribe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifteen_dp"
                />
            <TextView
                android:id="@+id/tv_drawer_my_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_subscribe"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@+id/iv_drawer_my_subscribe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                />
            <ImageView
                android:layout_width="@dimen/zero_point_five_dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_drawer_my_subscribe"
                android:layout_alignBottom="@+id/tv_drawer_my_subscribe"
                android:background="@android:color/darker_gray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_drawer_my_cache"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:background="@mipmap/side_cache"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifteen_dp"
                />
            <TextView
                android:id="@+id/tv_drawer_my_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_cache"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@+id/iv_drawer_my_cache"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dp"
                />
            <ImageView
                android:layout_width="@dimen/zero_point_five_dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_drawer_my_cache"
                android:layout_alignBottom="@+id/tv_drawer_my_cache"
                android:background="@android:color/darker_gray"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/iv_drawer_my_like"
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:background="@mipmap/black_lick_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifteen_dp"
                />
            <TextView
                android:id="@+id/tv_drawer_my_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_like"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@+id/iv_drawer_my_like"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relative_drawer_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/iv_drawer_homepage_blank"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="@dimen/fifty_dp"
            android:background="@android:color/white"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_drawer_homepage"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:background="@mipmap/side_home_"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginLeft="@dimen/forty_dp"
            />
        <TextView
            android:id="@+id/tv_drawer_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_drawer_homepage"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/iv_drawer_homepage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:textSize="@dimen/seventeen_sp"
            android:layout_alignTop="@+id/iv_drawer_homepage"
            android:layout_alignBottom="@+id/iv_drawer_homepage"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_drawer_series"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_drawer_series_blank"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="@dimen/fifty_dp"
            android:background="@android:color/white"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_drawer_series"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:background="@mipmap/side_series_"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginLeft="@dimen/forty_dp"
            />
        <TextView
            android:id="@+id/tv_drawer_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_drawer_series"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/iv_drawer_series"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:textSize="@dimen/seventeen_sp"
            android:layout_alignTop="@+id/iv_drawer_series"
            android:layout_alignBottom="@+id/iv_drawer_series"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_drawer_behind"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_drawer_behind_blank"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_drawer_behind"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:background="@mipmap/side_behind_"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginLeft="@dimen/forty_dp"
            />
        <TextView
            android:id="@+id/tv_drawer_behind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_drawer_behind"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/iv_drawer_behind"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:textSize="@dimen/seventeen_sp"
            android:layout_alignTop="@+id/iv_drawer_behind"
            android:layout_alignBottom="@+id/iv_drawer_behind"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>