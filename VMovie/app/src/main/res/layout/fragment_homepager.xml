<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_pager_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginLeft="@dimen/fifty_dp"
        android:layout_marginRight="@dimen/fifty_dp"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/new_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/channel_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="频道"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_point_seven_dp"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/two_point_seven_dp"
            android:layout_marginLeft="@dimen/ninety_dp"
            android:scaleType="matrix"
            android:src="@color/white" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>