<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:maxLines="2"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image"
        android:text="干货"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/image_share"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:background="@mipmap/black_share_icon"/>

    <TextView
        android:id="@+id/tv_share_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_share"
        android:layout_toRightOf="@+id/image_share"
        android:text="100"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/image_like"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/image_share"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/tv_share_num"
        android:background="@mipmap/home_like"/>

    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_like"
        android:layout_toRightOf="@+id/image_like"
        android:text="0"
        android:textSize="10sp"/>

</RelativeLayout>