<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_search_iv_icon"
        android:layout_width="@dimen/one_hundred_twenty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:layout_margin="@dimen/ten_dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_search_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_toRightOf="@id/item_search_iv_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/seventeen_sp" />

    <ImageView
        android:id="@+id/item_search_image_share"
        android:layout_width="@dimen/fifteen_dp"
        android:layout_height="@dimen/fifteen_dp"
        android:layout_alignLeft="@+id/item_search_tv_title"
        android:layout_below="@+id/item_search_tv_title"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:background="@mipmap/black_share_icon" />

    <TextView
        android:id="@+id/item_search_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_search_image_share"
        android:layout_toRightOf="@id/item_search_image_share"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fourteen_size" />

    <ImageView
        android:id="@+id/item_search_image_like"
        android:layout_width="@dimen/fifteen_dp"
        android:layout_height="@dimen/fifteen_dp"
        android:layout_alignBottom="@id/item_search_tv_share"
        android:layout_marginLeft="@dimen/forty_dp"
        android:layout_toRightOf="@id/item_search_tv_share"
        android:background="@mipmap/home_like" />

    <TextView
        android:id="@+id/item_search_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_search_image_like"
        android:layout_toRightOf="@id/item_search_image_like"
        android:textColor="@android:color/black" />

</RelativeLayout>