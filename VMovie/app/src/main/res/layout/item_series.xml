<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_series_item_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_series_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty_sp"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/tv_series_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/fifteen_dp"
            android:layout_below="@+id/tv_series_item_title"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/five_dp"
            />
        <ImageView
            android:id="@+id/iv_series_item_add_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/attention"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fifteen_dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_series_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:layout_marginBottom="@dimen/twenty_five_dp"
        android:ellipsize="end"
        android:maxLines="2"
        />
</LinearLayout>