<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_series_description_video_list_image"
        android:layout_width="@dimen/one_hundred_forty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/tv_series_description_video_list_play_state"
        android:layout_width="@dimen/one_hundred_forty_dp"
        android:layout_height="@dimen/eighty_dp"
        android:gravity="center"
        android:text="@string/video_is_playing"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:background="@color/trans_black"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tv_series_description_video_list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:28"
        android:layout_alignBottom="@+id/iv_series_description_video_list_image"
        android:layout_alignRight="@+id/iv_series_description_video_list_image"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:textSize="@dimen/twelve_sp"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_series_description_video_list_image"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_series_description_video_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/tv_series_description_video_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ten_sp"
            android:layout_marginTop="@dimen/ten_dp"
            />
    </LinearLayout>

</RelativeLayout>