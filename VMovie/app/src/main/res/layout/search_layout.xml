<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/ten_dp"
                android:background="@color/gray_ea"
                android:drawableLeft="@mipmap/home_search_disable"
                android:drawablePadding="@dimen/five_dp"
                android:hint="@string/please_input_key"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textSize="@dimen/fourteen_size" />

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/twenty_dp"
                android:src="@mipmap/login_input_del"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/search_tv_back"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/search_tv_search"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/halving_line" />

</LinearLayout>