<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Banner轮播图样式-->
    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>
        <!-- 指示点选中时的背景 -->
        <item name="banner_pointFocusedImg">@drawable/banner_rectangle_select</item>
        <!-- 指示点未选中时的背景 -->
        <item name="banner_pointUnfocusedImg">@drawable/banner_rectangle_normal</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_pointGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">3000</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">4sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
    </style>
    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference"/>
        <attr name="normal" format="reference"/>
    </declare-styleable>

</resources>
